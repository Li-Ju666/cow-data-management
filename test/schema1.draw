//// -- LEVEL 1
//// -- Tables and References

// Creating tables
Table cow_info {
  id int [pk]
  update_date timestamp [pk]
  tag_str varchar
  group int
  other_info varchar
}

Table milk_info {
  cow_id int [pk]
  milk_time timestamp [pk]
  volume float
  station int
}

Table FA {
  tag_str varchar [pk]
  measure_time timestamp [pk]
  posX smallint
  posY smallint
  posZ smallint
}

Table PA {
  tag_str varchar [pk]
  start_time timestamp [pk]
  end_time timestamp [pk]
  posX smallint
  posY smallint
  posZ smallint
  activity_type smallint
  distance smallint
}

Table PAA {
  tag_str varchar [pk]
  measure_time timestamp [pk]
  interv int
  activity_type smallint
  distance smallint
  period smallint
  duration int  
}


Table PC {
  tag_str varchar [pk]
  start_time timestamp [pk]
  end_time timestamp [pk]
  posX smallint
  posY smallint
  posZ smallint
}

Ref: milk_info.cow_id - cow_info.id
Ref: FA.tag_str - cow_info.tag_str
Ref: PA.tag_str - cow_info.tag_str
Ref: PAA.tag_str - cow_info.tag_str
Ref:PC.tag_str - cow_info.tag_str


